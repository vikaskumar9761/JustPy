<!-- res/drawable/progress_bar_color.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="#E0E0E0" /> <!-- Background color of the progress bar -->
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="@color/gray_900" /> <!-- The progress color (green in this case) -->
            </shape>
        </clip>
    </item>
</layer-list>
